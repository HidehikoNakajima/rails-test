<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>

    </br>
    
    <h3>入力フォーム</h3>
    
    <div class="form-horizontal" role="form">
      <%= form_for(@message) do |f| %>
      
        <div class="row form-group">
          <label class="col-sm-1 control-label text-center">名前</label>
          <div class="col-sm-4">
            <%= f.text_field :name,:class => "form-control",:placeholder => "Write name." %>
          </div>
        </div>
        
        <div class="row form-group">
          <label class="col-sm-1 control-label text-center">内容</label>
          <div class="col-sm-10">
            <%= f.text_area :body,:class => "form-control",:placeholder => "Write comments.",:size=>"60x10" %>
          </div>
        </div>
        
        <div class="row form-group">
          <div class="col-sm-offset-1 col-sm-1">
            <%= f.submit class:"btn btn-sm btn-primary" %>
          </div>
        </div>
        
      <% end %>
    </div>
  </div>
</div>