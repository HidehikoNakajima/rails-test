  <%= form_for(@message) do |f| %>
    <% if @message.errors.present? %>
      <div class="alert alert-danger">
        <% alert %>
        <ul>
          <% @message.errors.full_messages.each do |full_message| %>
            <li>
              <%= full_message %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
  
    <div class="row form-group">
      <label class="col-sm-1 control-label text-center topdownCenter">名前</label>
      <div class="col-sm-4">
        <%= f.text_field :name,:class => "form-control" %>
      </div>
      <label class="col-sm-1 control-label text-center topdownCenter">年齢</label>
      <div class="col-sm-1">
        <%= f.text_field :age,:class => "form-control " %>
      </div>
      <label class="control-label topdownCenter">才</label>
    </div>
    
    <div class="row form-group">
      <label class="col-sm-1 control-label text-center">内容</label>
      <div class="col-sm-10">
        <%= f.text_area :body,:class => "form-control",:size=>"60x5", :id => "textarea"%><br/>
        残り入力可能文字数：<span class="count">30</span>
      </div>
    </div>
    
    <div class="row">
      <div class="col-sm-offset-1 col-sm-11">
        <%= f.submit class:"btn btn-sm btn-primary" %>
      </div>
    </div>
    <br/>
  <% end %>